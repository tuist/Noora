#!/bin/bash
# mise description="Builds the CLI package using Swift Package Manager in Linux"
set -euo pipefail

podman run --rm \
    --volume "$MISE_PROJECT_ROOT:/package" \
    --workdir "/package/cli" \
    swift:6.0.0 \
    /bin/bash -c \
    "swift build --configuration release --build-path ./.build/linux"
